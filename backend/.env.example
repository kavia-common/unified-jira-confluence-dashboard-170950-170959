# Atlassian OAuth Configuration
# Register your app at https://developer.atlassian.com/console/myapps/
ATLASSIAN_CLIENT_ID=your_atlassian_client_id_here
ATLASSIAN_CLIENT_SECRET=your_atlassian_client_secret_here

# OAuth Redirect URIs (must match those configured in Atlassian app)
JIRA_REDIRECT_URI=http://localhost:3000/auth/jira/callback
CONFLUENCE_REDIRECT_URI=http://localhost:3000/auth/confluence/callback

# Application Security
SECRET_KEY=your-very-secure-secret-key-change-in-production

# Atlassian API URLs (default values, usually don't need to change)
ATLASSIAN_OAUTH_URL=https://auth.atlassian.com/authorize
ATLASSIAN_TOKEN_URL=https://auth.atlassian.com/oauth/token
ATLASSIAN_API_BASE=https://api.atlassian.com

# Development/Production Environment
ENV=development
DEBUG=true

# CORS Settings (adjust based on your frontend URL)
FRONTEND_URL=http://localhost:3000
